    <style name="numButton" parent="button">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="opButton" parent="button">
        <item name="android:textColor">#08A045</item>
    </style>
    <style name="Theme.Calculator" parent="Base.Theme.Calculator" />
